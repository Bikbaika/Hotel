@{
    ViewData["Title"] = "Оформление заказа";
    Layout = "_Layout";
}

<div>
    <h3>Форма оформления брони</h3>

    <form method="post" class="form-horizontal" role="form">
        <input type="hidden" value="@ViewBag.ClientId" name="ClientId" />
        <p>Для оформления бронирования заполните следующие поля:</p>
        <div class="form-group">
            <label for="BookingFrom" class="col-md-2 control-label">Дата прибытия:</label>
            <div class="col-md-4">
                <input type="date" name="BookingFrom" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="BookingTo" class="col-md-2 control-label">Дата выезда:</label>
            <div class="col-md-4">
                <input type="date" name="BookingTo" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="RoomId" class="col-md-2 control-label">Номер номера:</label>
            <div class="col-md-4">
                <input type="date" name="RoomId" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Отправить" />
            </div>
        </div>
    </form>
    </div>


